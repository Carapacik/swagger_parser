{
  "openapi": "3.1.0",
  "info": {
    "title": "Family API",
    "version": "1.0.0"
  },
  "paths": {
    "/family1": {
      "get": {
        "operationId": "getFamily1",
        "summary": "Get family 1 (with discriminator)",
        "tags": ["family"],
        "responses": {
          "200": {
            "description": "A family",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Family1"
                }
              }
            }
          }
        }
      }
    },
    "/family2": {
      "get": {
        "operationId": "getFamily2",
        "summary": "Get family 2 (without discriminator)",
        "tags": ["family"],
        "responses": {
          "200": {
            "description": "A family",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Family2"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Family1": {
        "type": "object",
        "properties": {
          "members": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/Cat"
                },
                {
                  "$ref": "#/components/schemas/Dog"
                },
                {
                  "$ref": "#/components/schemas/Human"
                }
              ],
              "discriminator": {
                "propertyName": "type",
                "mapping": {
                  "Cat": "#/components/schemas/Cat",
                  "Dog": "#/components/schemas/Dog",
                  "Human": "#/components/schemas/Human"
                }
              }
            }
          }
        },
        "required": [
          "members"
        ]
      },
      "Family2": {
        "type": "object",
        "properties": {
          "members": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "$ref": "#/components/schemas/Cat"
                },
                {
                  "$ref": "#/components/schemas/Dog"
                },
                {
                  "$ref": "#/components/schemas/Human"
                }
              ]
            }
          }
        },
        "required": [
          "members"
        ]
      },
      "Cat": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Cat"
            ]
          },
          "mewCount": {
            "type": "integer",
            "description": "Number of times the cat meows."
          }
        },
        "required": [
          "type",
          "mewCount"
        ]
      },
      "Dog": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Dog"
            ]
          },
          "barkSound": {
            "type": "string",
            "description": "The sound of the dog's bark."
          }
        },
        "required": [
          "type",
          "barkSound"
        ]
      },
      "Human": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Human"
            ]
          },
          "job": {
            "type": "string",
            "description": "The job of the human."
          }
        },
        "required": [
          "type",
          "job"
        ]
      }
    }
  }
}
